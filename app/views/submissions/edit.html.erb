<center>
  <br>
  <div>
    <hr>
        <%= form_for [@user, @course, @assignment, @submission], local: true, multipart: true, html: {:class => "form-horizontal"} do |form| %>
		  <% if @submission.errors.any? %>
		    <div id="error_explanation" class="alert alert-danger">
		      <h2>
		        <%= pluralize(@submission.errors.count, "error") %> prohibited
		        this submission from being saved:
		      </h2>
		      <ul>
		        <% @submission.errors.full_messages.each do |msg| %>
		          <li><%= msg %></li>
		        <% end %>
		      </ul>
		    </div>
		  <% end %>
		  <table>
		    <tr class="field">
		      <td><%= form.label :student_id,  :class => "control-label"  %></td>
		      <td><%= form.text_field :student_id,  :class => "student" %></td>
		    </tr>
		   
		    <tr class="field">
		      <td><%= form.label :answer,  :class => "control-label"  %></td>
		      <td><%= form.file_field :answer, :class => "answer" %></td>
		    </tr>
		  </table>
		  <%= form.submit "Confirm" %>
		  <%= link_to "Cancel", user_course_assignment_path(@user, @course, @assignment) %>
		<% end %>
  </div>
</center>
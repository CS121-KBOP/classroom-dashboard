<%= form_for [@user, @course], local: true, html: {:class => "form-horizontal"} do |form| %>
  <% if @course.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2>
        <%= pluralize(@course.errors.count, "error") %> prohibited
        this course from being saved:
      </h2>
      <ul>
        <% @course.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <table>
    <tr class="field">
      <td><%= form.label :title,  :class => "control-label"  %></td>
      <td><%= form.text_field :title,  :class => "title", :placeholder => "Intro to Computer Science"%></td>
    </tr>

    <tr class="field">
      <td><%= form.label :code,  :class => "control-label"  %></td>
      <td><%= form.text_field :code, :class => "code", :placeholder => "CS5" %></td>
    </tr>
    <tr class="field">
      <td><%= form.label :section,  :class => "control-label"  %></td>
      <td><%= form.number_field :section %></td>
    </tr>
    <tr class="field">
      <td><%= form.label :year,  :class => "control-label"  %></td>
      <td><%= form.number_field :year, :value => Date.today.year %></td>
    </tr>
    <tr class="field">
      <td><%= form.label :semester,  :class => "control-label"  %></td>
      <td><%= form.select :semester, ['FA', 'SP', 'SU'] %></td>
    </tr>
  </table>

  <%= form.submit "Confirm", :class => "btn" %>
  <%= link_to cancel_text, cancel_path, :class => "btn btn-danger" %>
<% end %>

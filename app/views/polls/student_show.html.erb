<center>
  <br>
    <div>
      <h2><%= @poll.name %></h2>
      <p><%= @poll.description %></p>
      <hr>
      <% @options.each do |option| %>
        <tr class= "row">
          <td class="col-lg-2" align="center">
                <%= link_to (option.label + ": " + truncate(option.description, length: 17, omission: '...')), url_for(controller: "options", action:"select", access_tag: @access_tag, option_id: option.id), class: "poll-option-button"%><br>
          </td>
        </tr>
      <% end %>
      <br><br><br>
    </div>
